{
  "author": "Quentin DI MEO",
  "name": "plume_player-lightweight-urgent-media-enhancer",
  "license": "MIT",
  "version": "1.0.1",
  "description": "Improves the Bandcamp player interface with a volume slider and enhanced playback bar",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:prod": "tsc --sourceMap false",
    "clean": "rimraf dist build",
    "dev": "npm run clean && npm run build:watch",
    "package": "npm run build:prod && npm run package:chrome && npm run package:firefox",
    "package:chrome": "node scripts/package-chrome.js",
    "package:firefox": "node scripts/package-firefox.js",
    "lint": "npm run prettier && npm run eslint",
    "eslint": "eslint src/**/*.ts",
    "eslint:fix": "eslint src/**/*.ts --fix",
    "prettier": "prettier --check 'src/**/*.{ts,js,json,css,html}'",
    "prettier:fix": "prettier --write 'src/**/*.{ts,js,json,css,html}'",
    "format": "npm run prettier:fix && npm run eslint:fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "bandcamp",
    "browser-extension",
    "chrome-extension",
    "firefox-addon",
    "typescript",
    "audio-player"
  ],
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
